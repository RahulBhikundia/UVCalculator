<%- include("partials/header.ejs") %>
<div class="px-4 pt-5 my-5 text-center">
  <h1 class="display-4 fw-bold text-body-emphasis">
    Should You Use Sunscreen?
  </h1>
  <div class="col-lg-6 col-9 mx-auto">
    <p class="lead mb-4">
      Find out if you need sunscreen by just providing few simple details. Learn
      how different UV levels can affect your skin type, and stay safe in the
      sun.
    </p>
    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mb-5">
      <div class="card">
        <div class="card-body">
          <form action="/submit" method="POST" onsubmit="return validateForm()">
            <div class="row mb-3">
              <label class="col-sm-4 col-form-label">Location</label>
              <div class="col-sm-8 d-flex gap-2">
                <input
                  type="button"
                  class="form-control btn btn-outline-success"
                  value="Allow"
                  onclick="getLocation()"
                />
                <input
                  type="button"
                  class="form-control btn btn-outline-danger"
                  value="Deny"
                />
              </div>
            </div>
            <div class="row mb-3">
              <label for="date" class="col-sm-4 col-form-label">Date</label>
              <div class="col-sm-8">
                <input
                  type="date"
                  class="form-control"
                  id="date"
                  name="date"
                  required
                />
              </div>
            </div>
            <div class="row mb-3">
              <label for="time" class="col-sm-4 col-form-label">Time</label>
              <div class="col-sm-8">
                <input
                  type="time"
                  class="form-control"
                  id="time"
                  name="time"
                  required
                />
              </div>
            </div>
            <div class="row mb-3">
              <label for="floatingSelect" class="col-sm-4 col-form-label"
                >Skin Type</label
              >
              <div class="col-sm-8">
                <select
                  class="form-select-new"
                  id="floatingSelect"
                  name="color"
                  required
                >
                  <option value="" hidden>Open this select menu</option>
                  <option class="option-1" value="1"><div></div></option>
                  <option class="option-2" value="2"><div></div></option>
                  <option class="option-3" value="3"><div></div></option>
                  <option class="option-4" value="4"><div></div></option>
                  <option class="option-5" value="5"><div></div></option>
                  <option class="option-6" value="6"><div></div></option>
                </select>
              </div>
              <input type="hidden" id="latitude" name="latitude" required />
              <input type="hidden" id="longitude" name="longitude" required />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%-include("partials/footer.ejs") %>
