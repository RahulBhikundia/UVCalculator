<%- include("partials/header.ejs") %> <% if(locals.num) { %>
<div class="px-4 pt-5 my-5 text-center"><%- include("card.ejs") %></div>
<% }else if(users.length === 0) { %>
<div class="container d-flex justify-content-center text-center">
  <div class="my-3 px-3 py-3 bg-body rounded shadow-lg col-lg-6">
    <p class="pb-3 mb-0 small lh-sm">
      <strong class="d-block text-gray-dark my-2">No Data Available Yet</strong>
      It looks like you haven't searched anything.
    </p>
  </div>
</div>
<% } else { %>
<div class="container d-flex justify-content-center">
  <div
    class="my-3 px-3 py-3 bg-body rounded shadow-lg col-lg-8 col-md-10 col-sm-10 col-8"
  >
    <h6 class="border-bottom pb-2 mb-0">Explore Our Blogs</h6>
    <% users.forEach(user => { %>
    <a href="/<%=user.pos%>" style="text-decoration: none">
      <div
        class="blog d-flex text-body-secondary border-bottom pt-3 gap-3"
        style="height: 100px"
      >
        <img
          src="photos/<%= user.color %>.png"
          alt="skin-type"
          width="40"
          height="40"
          class="rounded-circle"
        />
        <p class="pb-3 mb-0 small lh-sm">
          <strong class="d-block text-gray-dark"
            ><%= user.date %> <%= user.time %></strong
          >
          <strong>UV Index: <em><%= user.index %></em></strong>
        </p>
        <p class="pb-3 mb-0 small lh-sm d-none d-sm-block">
          <strong class="d-block text-gray-dark"
            >UV Level: <em><%= user.level %></em></strong
          >
          <strong>Vitamin D SunTime: <em> <%= user.vd %></em></strong>
        </p>
        <p class="pb-3 mb-0 small lh-sm d-none d-lg-block">
          <strong class="d-block text-gray-dark"
            >Tanning Ability: <em><%= user.ta %></em></strong
          >
        </p>
      </div>
    </a>
    <% }); %>
  </div>
</div>
<% } %> <%- include("partials/footer.ejs") %>
